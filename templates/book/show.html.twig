{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-3">Livre</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="bg-light">Id</th>
                    <td>{{ book.id }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Titre</th>
                    <td>{{ book.title }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Résumé</th>
                    <td>{{ book.resume }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_book_index') }}" class="btn btn-dark">Retour à la liste</a>
            <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-primary">modifier</a>
        </div>
<br>
        {{ include('book/_delete_form.html.twig') }}
    </div>
{% endblock %}

