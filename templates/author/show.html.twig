{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <div class="container shadow">
        <h1>Auteur</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ author.id }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ author.firstName }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ author.lastName }}</td>
                </tr>
                <tr>
                    <th>Biographie</th>
                    <td>{{ author.biography }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_author_index') }}" class="btn btn-primary">Retour à la liste</a>

            <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-primary ml-3">modifier</a>
        </div>

        {{ include('author/_delete_form.html.twig') }}
        <br>
    </div>
{% endblock %}

